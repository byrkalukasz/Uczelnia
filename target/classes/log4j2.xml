<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss} %t [%level] %c %msg %n"  />
        </Console>
        <File name="File" fileName="all.log">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss} %t [%level] %c %msg %n"  />
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>